{% extends 'base.html.twig' %}

{% block body %}
       {% for message in app.flashes('notice') %}
        <div class="ibox-content">
            <div class="alert alert-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    {# pass an array argument to get the messages of those types  #}
    {% for label, messages in app.flashes(['warning', 'error','danger']) %}
        {% for message in messages %}
            <div class="ibox-content">
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Subdepartments list </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#">Config option 1</a>
                            </li>
                            <li><a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sub Department Name</th>
                                <th>Created at</th>
                                <th>Updated at</th>
                                <th>Id</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for subDepartment in subDepartments %}
                                <tr>
                                    <td><a href="{{ path('departments_show', { 'id': subDepartment.id }) }}">{{ subDepartment.subDepartmentName }}</a></td>
                                    <td>{% if subDepartment.createdAt %}{{ subDepartment.createdAt|date('Y-m-d') }}{% endif %}</td>
                                    <td>{% if subDepartment.updatedAt %}{{ subDepartment.updatedAt|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ subDepartment.id }}</td>
                                    <td>
                                       <a href="{{ path('subdepartment_show', { 'id': subDepartment.id }) }}" class="btn btn-info btn-xs">show</a>
                                       <a href="{{ path('subdepartment_edit', { 'id': subDepartment.id }) }}" class="btn btn-warning btn-xs">edit</a>
                                       
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
{% endblock %}
