{% extends 'base.html.twig' %}

{% block body %}
       {% for message in app.flashes('notice') %}
        <div class="ibox-content">
            <div class="alert alert-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    {# pass an array argument to get the messages of those types  #}
    {% for label, messages in app.flashes(['warning', 'error','danger']) %}
        {% for message in messages %}
            <div class="ibox-content">
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Departments list </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#">Config option 1</a>
                            </li>
                            <li><a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Departmentname</th>
                                <th>Createdat</th>
                                <th>Updatedat</th>
                                <th>Id</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for department in departments %}
                                <tr>
                                    <td><a href="{{ path('departments_show', { 'id': department.id }) }}">{{ department.departmentName }}</a></td>
                                    <td>{% if department.createdAt %}{{ department.createdAt|date('Y-m-d') }}{% endif %}</td>
                                    <td>{% if department.updatedAt %}{{ department.updatedAt|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ department.id }}</td>
                                    <td>
                                       <a href="{{ path('departments_show', { 'id': department.id }) }}" class="btn btn-info btn-xs">show</a>
                                       <a href="{{ path('departments_edit', { 'id': department.id }) }}" class="btn btn-warning btn-xs">edit</a>
                                    
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    {% endblock %}
