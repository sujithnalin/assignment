{% extends 'base.html.twig' %}

{% block body %}
        
     {% for message in app.flashes('notice') %}
        <div class="ibox-content">
            <div class="alert alert-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    {# pass an array argument to get the messages of those types  #}
    {% for label, messages in app.flashes(['warning', 'error','danger']) %}
        {% for message in messages %}
            <div class="ibox-content">
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Mapdepartment edit</h5>
            </div>
            <div class="ibox-content col-lg-12">
                {{ form_start(edit_form) }}
                <div class="form-group">
                    <label class="col-lg-2 control-label">Department Name</label>
                    <div class="col-lg-10">
                        {{ form_widget(edit_form.departments) }}
                        {{ form_errors(edit_form.departments) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Sub Department Name</label>
                    <div class="col-lg-10">
                        {{ form_widget(edit_form.subDepartment) }}
                        {{ form_errors(edit_form.subDepartment) }}
                    </div>
                </div>
                    
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" value="Submit">
                    </div>
                </div>
                {# Render CSRF token etc .#}
                <div style="display:none">
                    {{ form_rest(edit_form) }}
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div> 
{% endblock %}
