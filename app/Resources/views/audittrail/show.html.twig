{% extends 'base.html.twig' %}

{% block body %}
    <h1>Audittrail</h1>

    <table>
        <tbody>
            <tr>
                <th>Tablename</th>
                <td>{{ auditTrail.tableName }}</td>
            </tr>
            <tr>
                <th>Oldvalue</th>
                <td>{{ auditTrail.oldValue }}</td>
            </tr>
            <tr>
                <th>Newvalue</th>
                <td>{{ auditTrail.newValue }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if auditTrail.createdAt %}{{ auditTrail.createdAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if auditTrail.updatedAt %}{{ auditTrail.updatedAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ auditTrail.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('audittrail_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('audittrail_edit', { 'id': auditTrail.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
