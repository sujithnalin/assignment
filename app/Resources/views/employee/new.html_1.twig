{% extends 'base.html.twig' %}

{% block body %}
    
    {% for message in app.flashes('notice') %}
        <div class="ibox-content">
            <div class="alert alert-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    {# pass an array argument to get the messages of those types  #}
    {% for label, messages in app.flashes(['warning', 'error']) %}
        {% for message in messages %}
            <div class="ibox-content">
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Employee creation</h5>
            </div>
            <div class="ibox-content">
                {{ form_start(form) }}
                <div class="form-group">
                    <label class="col-lg-2 control-label">Department Name</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.employeeName) }}
                        {{ form_errors(form.employeeName) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Address</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.address) }}
                        {{ form_errors(form.address) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Tp Number</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.tpNumber) }}
                        {{ form_errors(form.tpNumber) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Date Of Birth</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.dateOfBirth) }}
                        {{ form_errors(form.dateOfBirth) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Department</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.mapDepartment) }}
                        {{ form_errors(form.mapDepartment) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Sub Department</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.subDepartment) }}
                        {{ form_errors(form.subDepartment) }}
                    </div>
                </div>
                    
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" value="Submit">
                    </div>
                </div>
                {# Render CSRF token etc .#}
                <div style="display:none">
                    {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
